<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:background="#FFFFFF"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Show"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_movie_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Movie ID"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_movie_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Movie Name"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_user_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="User Name"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_user_contact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="User Number"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_movie_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Movie Time"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_user_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/b_seat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Available Seat"
            android:textSize="18dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/b_seat_booking"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Add Seat"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/b_seat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/b_book"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:text="Book"
            android:textColor="#000000"
            android:textSize="18dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/b_seat_booking"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>