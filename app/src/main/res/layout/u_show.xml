<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:background="#FFFFFF"
    android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Show"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_movie_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Movie name"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_lang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Language"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_movie_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_director"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Director name"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_lang"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_cast"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Cast name"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_director"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_category"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Category"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_cast"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_timing"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Show Date &amp; time"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:inputType="text|datetime"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_available"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Available seat"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_timing"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Address"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_available"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_theatre"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Theatre name"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/up_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Theatre price"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                app:layout_constraintTop_toBottomOf="@+id/up_theatre"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/up_save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:text="Save"
                android:textColor="#000000"
                android:textSize="18dp"
                android:background="@drawable/button"
                app:layout_constraintTop_toBottomOf="@+id/up_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>