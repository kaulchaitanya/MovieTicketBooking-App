<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".useractivity.passcode.ResetPasscode">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/change_passcodeView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:correctStateColor="@android:color/holo_green_light"
        app:wrongStateColor="@android:color/holo_red_light"
        app:numberTextColor="@android:color/black"
        app:firstInputTip="Enter a new passcode of 4 digits"
        app:secondInputTip="Re-enter a passcode"/>


</androidx.constraintlayout.widget.ConstraintLayout>